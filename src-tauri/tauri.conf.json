{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TenRun WebView",
  "version": "1.0.0",
  "identifier": "com.tenrun.webview",

  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },

  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "TenRun WebView",
        "width": 800,
        "height": 600,
        "fullscreen": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self' data: https:; font-src 'self'; connect-src 'self' https:;"
    }
  },

  "bundle": {
    "active": true,
    "icon": ["../assets/icons/icon.png"],
    "android": {
      "minSdkVersion": 24,
      "versionCode": 1
    }
  },

  "plugins": {
    "http": {
      "all": false,
      "request": true,
      "scope": ["https://**"]
    },
    "shell": {
      "open": true
    }
  }
}
